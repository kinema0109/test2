<header class="navbar navbar-fixed-top navbar-inverse">
       <div class="container">
      <%= link_to "sample app", '#', id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li>
          <% if current_page?(locale: :en) %>
            <%= content_tag :li do %>
              <%= link_to t('layouts.header.vietnamese'), locale: :vi %>
            <% end  %>
          <% else%>
            <%= content_tag :li do %>
              <%= link_to t('layouts.header.english'), locale: :en %>
            <% end  %>
          <% end  %>
          <li><%= link_to t('layouts.header.home'), root_path %></li>
          <li><%= link_to t('layouts.header.help'), help_path %></li>
            <% if logged_in? %>
              <li><%= link_to "Users", '#' %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
                </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('layouts.user.profile'), current_user %></li>
                <li><%= link_to t("layouts.user.settings"), '#' %></li>
                <li class="divider"></li>
                <li>
                <%= button_to t('layouts.user.signout'), logout_path, method: :delete
                 %>
                </li>
              </ul>
            </li>
            <% else %> 
            <li><%= link_to t('layouts.header.login'), login_path %></li>        
            <% end %>
          </ul>
      </nav>
    </div>
</header>